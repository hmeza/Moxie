<script type="text/javascript" src="/js/jquery.js"></script>
<script type="text/javascript" src="/js/finances/utils.js"></script>
<script type="text/javascript">
var check = function() {
    if($('#amount').val() != 0
        && $('#rate').val() != 0
        && $('#months').val() != 0) {
        finances = new Finances();
        finances.finalCapital($('#amount').val(), $('#rate').val(), $('#months').val());
        $('#interest').val(finances.interest);
        $('#total').val(finances.getTotal());
    }
}

$(document).ready(function() {
    $('#amount').change(check);
    $('#rate').change(check);
    $('#months').change(check);
});

</script>

<h2>Selecciona un tipo de depósito</h2>
<form>
    Dinero a depositar
    <input id="amount" type="number" value="0" placeholder="0,00">
    <br>
    Interés
    <input id="rate" type="number" value="0" placeholder="0">
    <br>
    Tiempo
    <input id="months" type="number" value="0" placeholder="12">

    <br><br>
    Intereses
    <input id="interest">
    <br>
    Total
    <input id="total">
</form>

 */
function getCurrencyChar($currency)
{
    if ($currency == 'gbp') {
        $currencyChar = '&pound;';
    } else if($currency == 'usd') {
        $currencyChar = '&dollar;';
    } else {
        $currencyChar = '&euro;';
    }
    return $currencyChar;
}

